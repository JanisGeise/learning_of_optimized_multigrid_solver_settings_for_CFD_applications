FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-8;
        relTol           0.01;
        smoother         DICGaussSeidel;
    }

    pFinal
    {
        $p;
        tolerance       1e-6;
        relTol           0;
    }

    "(U|k|nuTilda)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.1;
    }

    "(U|k|nuTilda)Final"
    {
        $U;
        tolerance       1e-07;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors         1;
    nNonOrthogonalCorrectors 0;
    nOuterCorrectors    50;

    residualControl
        {

            "(U|k|nuTilda)"
            {
                relTol          0;
                tolerance       1e-5;
            }

            "(p)"
            {
                relTol          0;
                tolerance       1e-4;
            }
        }
}


